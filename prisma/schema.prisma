// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Enquiry {
  id         String   @id @default(cuid())
  name       String
  email      String
  phone      String?
  message    String
  treatment  String?
  source     String
  createdAt  DateTime @default(now())
  answers    Json?
}

model Package {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  features    Json?
  priceCents  Int
  durationMin Int
  imageUrl    String?
  tier        String? // bronze | silver | gold | platinum
  category    String? // treatment | personal_training
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  bookings    Booking[]
}

model CaseStudy {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  summary     String
  content     String
  coverUrl    String?
  tags        Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model About {
  id        String   @id @default(cuid())
  heading   String
  content   String
  heroUrl   String?
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

enum BookingStatus {
  pending
  confirmed
  cancelled
}

model Booking {
  id          String        @id @default(cuid())
  name        String
  email       String
  phone       String?
  notes       String?
  status      BookingStatus @default(pending)
  package     Package       @relation(fields: [packageId], references: [id])
  packageId   String
  // Start and end times for the booked slot (including treatment duration)
  startTime   DateTime?
  endTime     DateTime?
  createdAt   DateTime      @default(now())
}

// Lightweight RAG store without pgvector. Embeddings are persisted as JSON arrays.
model AIChunk {
  id        String   @id @default(cuid())
  type      String   // "package" | "case"
  sourceId  String
  title     String
  content   String
  metadata  Json?
  embedding Json     // number[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([type, sourceId])
}

// Weekly recurring availability windows (e.g., Monday–Friday 09:00–17:00)
model AvailabilityRule {
  id               String   @id @default(cuid())
  weekday          Int      // 0 = Sunday, 6 = Saturday
  startMinutes     Int      // minutes from midnight (e.g., 9*60)
  endMinutes       Int      // minutes from midnight (e.g., 17*60)
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  @@index([weekday])
}

// One-off unavailability blocks (absolute times)
model TimeBlock {
  id        String   @id @default(cuid())
  start     DateTime
  end       DateTime
  reason    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([start])
  @@index([end])
}

// Weekly recurring unavailability (e.g., every Tue 12:00–14:00)
model RecurringBlock {
  id           String   @id @default(cuid())
  weekday      Int      // 0 = Sunday, 6 = Saturday
  startMinutes Int
  endMinutes   Int
  startsOn     DateTime @default(now())
  endsOn       DateTime?
  reason       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  @@index([weekday])
}
